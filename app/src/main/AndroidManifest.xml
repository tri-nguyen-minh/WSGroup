<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.wsgroup.main">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WSGroup"
        android:usesCleartextTraffic="true">
        <activity android:name=".views.activities.message.MessageActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"></activity>
        <activity android:name=".views.activities.message.MessageListActivity" />
        <activity android:name=".views.activities.productviews.SearchProductActivity" />
        <activity android:name=".views.activities.DiscountActivity" />
        <activity android:name=".views.activities.productviews.CampaignListActivity" />
        <activity android:name=".views.activities.productviews.PrepareProductActivity" />
        <activity android:name=".views.activities.account.DeliveryAddressActivity" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_camera" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/black" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="Test message" />

        <activity
            android:name=".views.activities.OrderActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.activities.account.DeliveryAddressSelectActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.ordering.InfoActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.ordering.ConfirmActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.SupplierActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.CartActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.account.AccountInformationActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.productviews.ProductDetailActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.account.AccountDetailActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.account.PasswordChangeActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.account.OTPConfirmActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.account.PhoneInputActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.account.SignInActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".models.services.FirebaseMessageService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>