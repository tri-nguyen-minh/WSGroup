<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRecViewHoneProduct"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:backgroundTint="@color/gray"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="7dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgRecViewHomeProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:src="@drawable/img_unavailable"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtHomeRecViewProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    tools:text="I'm testing this text fiew ridl now so dont ask me "
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp">


                    <RatingBar
                        android:id="@+id/ratingRecViewHomeProduct"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="@color/gold"
                        android:secondaryProgressTint="@color/gold"
                        android:numStars="5"
                        android:rating="4"
                        android:stepSize="0.5"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:id="@+id/txtHomeRecViewProductOrderCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        tools:text="12.3K"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/lblProductOrderCount"/>

                    <TextView
                        android:id="@+id/lblProductOrderCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        tools:text=" orders"
                        android:textSize="12sp"
                        android:textColor="@color/gray_dark"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/txtRecViewHomeRetailPrice"/>

                    <TextView
                        android:id="@+id/txtRecViewHomeRetailPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        tools:text="1.100.000d"
                        android:textSize="18sp"
                        android:textColor="@color/red"
                        app:layout_constraintTop_toBottomOf="@id/lblProductOrderCount"
                        app:layout_constraintRight_toRightOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtCampaign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="5dp"
                android:background="@color/red"
                android:textStyle="bold"
                android:fontFamily="monospace"
                tools:text="Ongoing Campaign"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="top|right"/>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>