<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.tabs.product.DetailTab"
    android:orientation="vertical"
    android:background="@color/gray_background">

    <ScrollView
        android:id="@+id/scrollViewProduct"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center|top">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:background="@color/gray_background">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/imgProduct"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"/>

                        <ViewFlipper
                            android:id="@+id/viewFlipperProduct"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/gray_background">

                    <TextView
                        android:id="@+id/txtProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="10dp"
                        android:fontFamily="@font/montserratr"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text=""/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginVertical="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_background">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guidelineProductUserFeedback"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.43"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="left|center"
                                android:layout_marginRight="1dp"
                                android:paddingRight="15dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/guidelineProductUserFeedback">

                                <TextView
                                    android:id="@+id/lblProductOrderCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserratr"
                                    android:gravity="left"
                                    android:text="Orders:"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="15sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/lblProductReviewCount"/>

                                <TextView
                                    android:id="@+id/txtProductOrderCount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="7dp"
                                    android:fontFamily="@font/montserratr"
                                    android:gravity="right|center"
                                    android:text="0K"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintLeft_toRightOf="@id/lblProductOrderCount"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/txtProductReviewCount"/>

                                <TextView
                                    android:id="@+id/lblProductReviewCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:fontFamily="@font/montserratr"
                                    android:gravity="left"
                                    android:text="Reviews:"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="15sp"
                                    app:layout_constraintTop_toBottomOf="@id/lblProductOrderCount"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                                <TextView
                                    android:id="@+id/txtProductReviewCount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="7dp"
                                    android:layout_marginTop="3dp"
                                    android:fontFamily="@font/montserratr"
                                    android:gravity="right|center"
                                    android:text="0K"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    app:layout_constraintTop_toBottomOf="@id/txtProductOrderCount"
                                    app:layout_constraintLeft_toRightOf="@id/lblProductReviewCount"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:background="@color/white"
                                android:layout_marginLeft="1dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/guidelineProductUserFeedback"
                                app:layout_constraintRight_toRightOf="parent">

                                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                    android:id="@+id/ratingProduct"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:progressTint="@color/gold"
                                    android:secondaryProgressTint="@color/gray"
                                    android:progressBackgroundTint="@color/gray"
                                    android:numStars="5"
                                    android:rating="4.5"
                                    android:theme="@style/ratingBar"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                                <TextView
                                    android:id="@+id/txtRatingProduct"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/montserratr"
                                    android:text="0.0"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toLeftOf="@id/ratingProduct"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutLoyalty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        app:layout_constraintBottom_toTopOf="@id/txtProductRetailPrice"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/lblLoyaltyTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratm"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="Loyal Customer Discount"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/txtLoyaltyDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:fontFamily="@font/montserratm"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintRight_toLeftOf="@id/lblLoyaltyDiscount"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/lblLoyaltyDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratm"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="OFF"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutBasePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white">


                        <TextView
                            android:id="@+id/txtProductRetailPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/montserratr"
                            android:gravity="left"
                            android:text="0.000d"
                            android:textColor="@color/red"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/lblNoDiscount"/>

                        <TextView
                            android:id="@+id/lblNoDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/montserratr"
                            android:gravity="left"
                            android:text="Before discount"
                            android:textColor="@color/gray_dark"
                            android:textSize="13sp"
                            app:layout_constraintTop_toBottomOf="@id/txtProductRetailPrice"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <Button
                            android:id="@+id/btnPurchaseProduct"
                            android:text="PURCHASE"
                            style="@style/style_button_dialog_box"
                            android:textSize="15sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutCampaign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblLayoutCampaign"
                            android:text="Product's Campaign"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="7dp"
                            style="@style/style_background_header"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutSelectCampaign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:padding="7dp"
                            android:background="@color/white">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/imgAddAddress">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserratr"
                                    android:gravity="left"
                                    android:text=" View"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/txtCampaignCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="7dp"
                                    android:fontFamily="@font/montserratr"
                                    android:gravity="left"
                                    android:text="00"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="17sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/lblCampaignCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserratr"
                                    android:gravity="left"
                                    android:text="Ongoing Campaign"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>


                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imgAddAddress"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:scaleY="1.2"
                                android:scaleX="1.2"
                                android:src="@drawable/ic_direction_right"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:text="More Info"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                style="@style/style_background_header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_background"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutSupplierName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineSupplierName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.3"/>

                    <TextView
                        android:id="@+id/lblSupplierName"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:fontFamily="@font/montserratr"
                        android:gravity="left"
                        android:text="Suppliers"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginLeft="1dp"
                        android:background="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/guidelineSupplierName"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="1dp"
                        android:paddingLeft="10dp"
                        android:background="@color/white"
                        app:layout_constraintLeft_toRightOf="@+id/guidelineSupplierName"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txtSupplierName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:paddingVertical="10dp"
                            android:fontFamily="@font/montserratr"
                            android:gravity="left"
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/imgSupplierName"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/imgSupplierName"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleY="1.2"
                            android:scaleX="1.2"
                            android:src="@drawable/ic_direction_right"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutProductCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineProductCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.3"/>

                    <TextView
                        android:id="@+id/lblProductCategory"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:fontFamily="@font/montserratr"
                        android:gravity="left"
                        android:text="Category"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginLeft="1dp"
                        android:background="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/guidelineProductCategory"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="1dp"
                        android:paddingLeft="10dp"
                        android:background="@color/white"
                        app:layout_constraintLeft_toRightOf="@+id/guidelineProductCategory"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txtProductCategory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingRight="5dp"
                            android:paddingVertical="10dp"
                            android:fontFamily="@font/montserratr"
                            android:gravity="left"
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/imgProductCategory"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/imgProductCategory"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleY="1.2"
                            android:scaleX="1.2"
                            android:src="@drawable/ic_direction_right"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutProductQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineProductQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.3"/>

                    <TextView
                        android:id="@+id/lblProductQuantity"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:fontFamily="@font/montserratr"
                        android:gravity="left"
                        android:text="Quantity"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginLeft="1dp"
                        android:background="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/guidelineProductQuantity"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <RelativeLayout
                        android:id="@+id/layoutRetailQuantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:background="@color/white"
                        android:paddingVertical="10dp"
                        android:layout_marginLeft="1dp"
                        app:layout_constraintLeft_toRightOf="@id/guidelineProductQuantity"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <TextView
                            android:id="@+id/txtProductQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/montserratr"
                            android:gravity="left"
                            android:textColor="@color/gray_darker"
                            android:textSize="14sp"
                            android:text="5000"
                            android:background="@color/white"
                            android:layout_marginLeft="10dp"/>

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutProductWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineProductWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.3"/>

                    <TextView
                        android:id="@+id/lblProductWeight"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:fontFamily="@font/montserratr"
                        android:gravity="left"
                        android:text="Weight"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginLeft="1dp"
                        android:background="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/guidelineProductWeight"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <RelativeLayout
                        android:id="@+id/layoutWeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:background="@color/white"
                        android:paddingVertical="10dp"
                        android:layout_marginLeft="1dp"
                        app:layout_constraintLeft_toRightOf="@id/guidelineProductWeight"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <TextView
                            android:id="@+id/txtProductWeight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/montserratr"
                            android:gravity="left"
                            android:textColor="@color/gray_darker"
                            android:textSize="14sp"
                            android:text="5000"
                            android:background="@color/white"
                            android:layout_marginLeft="10dp"/>

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutProductDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineProductDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.3"/>

                    <TextView
                        android:id="@+id/lblProductDescription"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:fontFamily="@font/montserratr"
                        android:gravity="left"
                        android:text="Description"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginLeft="1dp"
                        android:background="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/guidelineProductDescription"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toRightOf="@+id/guidelineProductDescription"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/txtProductDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:paddingVertical="10dp"
                            android:fontFamily="@font/montserratr"
                            android:gravity="left"
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp"
                            android:ellipsize="end"
                            android:text="test"
                            android:layout_marginLeft="1dp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/lblDescriptionLength"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:fontFamily="@font/montserratr"
                            android:gravity="right"
                            android:textColor="@color/red"
                            android:textSize="14sp"
                            android:text="View more"
                            android:layout_marginLeft="1dp"
                            android:background="@color/white"/>

                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutMoreSuppliersProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblMoreProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/montserratr"
                        android:gravity="left"
                        android:text="More From"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/txtMoreSuppliersProductsName"/>

                    <TextView
                        android:id="@+id/txtMoreSuppliersProductsName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="7dp"
                        android:fontFamily="@font/montserratr"
                        android:gravity="left"
                        android:textColor="@color/gray_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintLeft_toRightOf="@id/lblMoreProduct"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recViewMoreSuppliersProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>