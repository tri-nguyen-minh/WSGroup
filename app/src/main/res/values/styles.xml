<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_main_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_history_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_button_account">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">40dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:backgroundTint">@color/blue_main</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="style_button_dialog_box">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:backgroundTint">@color/blue_main</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="style_profile_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">7dp</item>
    </style>

    <style name="style_profile_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">left|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="style_otp_box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_otp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="style_label_account_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="style_txt_account_info">
        <item name="android:gravity">right|center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

</resources>